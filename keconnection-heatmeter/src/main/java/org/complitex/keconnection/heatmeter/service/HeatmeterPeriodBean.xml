<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.complitex.keconnection.heatmeter.service.HeatmeterPeriodBean">
    <resultMap id="heatmeterPeriodResultMap" type="org.complitex.keconnection.heatmeter.entity.HeatmeterPeriod">
        <id property="id"/>
        <result property="parentId"/>
        <result property="heatmeterId"/>
        <result property="type" column="type_id"/>
        <result property="beginDate"/>
        <result property="endDate"/>
        <result property="operatingMonth"/>
    </resultMap>

    <insert id="insertHeatmeterPeriod" parameterType="org.complitex.keconnection.heatmeter.entity.HeatmeterPeriod"
            useGeneratedKeys="true" keyProperty="id">
        insert into `heatmeter_period`
          (`parent_id`, `heatmeter_id`, `type_id`, `begin_date`, `end_date`, `operating_month`)
        values
          (#{parentId}, #{heatmeterId}, #{type}, #{beginDate}, #{endDate}, #{operatingMonth})
    </insert>

    <update id="updateHeatmeterPeriod" parameterType="org.complitex.keconnection.heatmeter.entity.HeatmeterPeriod">
        update `heatmeter_period` set `parent_id` = #{parentId}, `heatmeter_id` = #{heatmeterId}, `type_id` = #{type},
          `begin_date` = #{beginDate}, `end_date` = #{endDate}, `operating_month` = #{operatingMonth}
        where `id` = #{id}
    </update>

    <select id="selectHeatmeterPeriod" parameterType="long" resultMap="heatmeterPeriodResultMap">
        select * from `heatmeter_period` where `id` = #{id}
    </select>

    <select id="selectHeatmeterPeriodsByHeatmeterId" parameterType="long" resultMap="heatmeterPeriodResultMap">
        select * from `heatmeter_period` where `heatmeter_id` = #{heatmeterId}
    </select>

    <update id="updateHeatmeterPeriodParent" parameterType="map">
        update `heatmeter_period` set `parent_id` = #{parentId} where `id` = #{id}
    </update>
</mapper>