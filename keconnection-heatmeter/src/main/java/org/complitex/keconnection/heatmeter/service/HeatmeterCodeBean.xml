<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.complitex.keconnection.heatmeter.service.HeatmeterCodeBean">
    <resultMap id="heatmeterCodeResultMap" type="org.complitex.keconnection.heatmeter.entity.HeatmeterCode">
        <id property="id"/>
        <result property="heatmeterId"/>
        <result property="buildingCodeId"/>
        <result property="beginDate"/>
        <result property="endDate"/>
        <result property="buildingId"/>
        <result property="organizationId"/>
    </resultMap>

    <insert id="insertHeatmeterCode" parameterType="org.complitex.keconnection.heatmeter.entity.HeatmeterCode">
        insert into `heatmeter_code` (`heatmeter_id`, `building_code_id`, `begin_date`, `end_date`)
          values (#{heatmeterId}, #{buildingCodeId}, #{beginDate}, #{endDate})
    </insert>

    <update id="updateHeatmeterCode" parameterType="org.complitex.keconnection.heatmeter.entity.HeatmeterCode">
        update `heatmeter_code` set `heatmeter_id` = #{heatmeterId}, `building_code_id` = #{buildingCodeId},
          `begin_date` = #{beginDate}, `end_date` = #{endDate}
        where `id` = #{id}
    </update>

    <select id="selectHeatmeterCode" parameterType="long" resultMap="heatmeterCodeResultMap">
        select * from `heatmeter_code` where `id` = #{id}
    </select>

    <select id="selectHeatmeterCodesByHeatmeterId" parameterType="long" resultMap="heatmeterCodeResultMap">
        select hc.*, bc.`building_id`, bc.`organization_id` from `heatmeter_code` hc
          left join `building_code` bc on bc.`id` = hc.`building_code_id`
        where hc.`heatmeter_id` = #{heatmeterId}
    </select>
</mapper>